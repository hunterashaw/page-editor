{
    "devDependencies": {
        "browser-sync": "^2.27.10",
        "esbuild": "^0.15.10",
        "npm-run-all": "^4.1.5",
        "preact": "^10.11.1",
        "tailwindcss": "^3.1.8"
    },
    "dependencies": {
        "clsx": "^1.2.1",
        "dset": "^3.1.2",
        "preact-render-to-string": "^5.2.5"
    },
    "scripts": {
        "start": "run-p watch:app watch:style serve",
        "serve": "npx browser-sync start --server 'dist' --files 'dist' --no-open --ws",
        "watch:app": "npx esbuild src/index.jsx --bundle --minify --sourcemap --format=iife --outfile=dist/builder.js --jsx-import-source=preact --jsx=automatic --watch",
        "watch:style": "npx tailwindcss -i ./src/style.css -o ./dist/style.css --watch"
    }
}
